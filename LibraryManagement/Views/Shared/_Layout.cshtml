@using LibraryManagement.Entities
@using LibraryManagement.ExtensionMethods
@{
    Librarian loggedUser = this.ViewContext.HttpContext.Session.GetObject<Librarian>("loggedUser");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-image:linear-gradient(#a517ba,#5f1782)">
            <div class="container">
                <a href="/Home/Index" class="navbar-brand">LibraryManagement</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav navbar-nav">
                    </ul>
                    <ul class="nav navbar-nav ml-auto">
                        @if (loggedUser != null)
                        {
                            <li class="nav-item ">
                                <a href="/Home/Index" class="nav-link text-light mr-5">Home</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Librarian/Index" class="nav-link text-light mr-5">Librarians</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Book/Index" class="nav-link text-light mr-5">Books</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Author/Index" class="nav-link text-light mr-5">Authors</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Category/Index" class="nav-link text-light mr-5">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a href="/AuthorToBook/Index" class="nav-link text-light mr-5">AuthorToBook</a>
                            </li>
                            <li class="nav-item">
                                <a href="/BookToCategory/Index" class="nav-link text-light mr-5">BookToCategory</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Home/Logout" class="nav-link text-light">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="/Home/Register" class="nav-link text-light"><i class="fa-solid fa-user-plus"></i> Register</a>
                            </li>
                            <li class="nav-item ">
                                <a href="/Home/Login" class="nav-link text-light"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

</body>
</html>
