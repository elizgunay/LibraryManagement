@model IEnumerable<LibraryManagement.Entities.Librarian>
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "LIBRARIAN";

}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Librarian List</h2>
        </div>
        <div class="col-6 text-right">
            <a href="/Librarian/Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Create New 
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>   
                    @Html.DisplayNameFor(m=>m.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Username)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">@obj.FirstName</td>
                    <td width="20%">@obj.LastName</td>
                    <td width="20%">@obj.Username</td>

                    <td width="20%">
                        <a href="/Librarian/Edit?Id=@obj.Id" class="btn btn-sm btn-info"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                        <a href="/Librarian/Delete?Id=@obj.Id" class="btn btn-sm btn-danger"><i class="fa-solid fa-user-xmark"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
