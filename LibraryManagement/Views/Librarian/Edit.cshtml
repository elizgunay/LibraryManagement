@model LibraryManagement.ViewModels.Librarians.EditVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

@using (Html.BeginForm("Edit", "Librarian", FormMethod.Post))
{
    //Html.AntiForgeryToken()

    <br />
    <h4 class="ml-2">Edit Librarian</h4>
    <hr />
    @Html.HiddenFor(m => m.Id)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("FirstName", "First Name", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("LastName", "Last Name", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("Username", "Username", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("Password", "Password", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-lg-10 m-4 ">
            <input type="submit" value="Save" class="btn btn-primary btn-lg" />
        </div>
    </div>

    /*<div class="col">
        <a href="/Customer/Index" class="btn btn-success w-100">Back</a>
    </div>*/

    <div class="m-3">
        @Html.ActionLink("Back to List", "Index", "Librarian")
    </div>


}

