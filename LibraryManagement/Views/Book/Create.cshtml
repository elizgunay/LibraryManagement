@model LibraryManagement.ViewModels.Books.CreateVM
@using LibraryManagement.Entities
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "CREATE BOOKS";

}
@using (Html.BeginForm("Create", "Book", FormMethod.Post))
{

    <br />
    <h4 class="ml-4">Add Book</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("Title", "Title", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("SerialNumber", "Serial Number", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.SerialNumber, new { @class = "form-control", placeholder = "Serial Number" })
            @Html.ValidationMessageFor(m => m.SerialNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3 font-weight-bold m-4">
        @Html.Label("Publisher", "Publisher", new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control", placeholder = "Publisher" })
            @Html.ValidationMessageFor(m => m.Publisher, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-lg-10 m-4 ">
            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
        </div>
    </div>

    /*<div class="col">
        <a href="/Customer/Index" class="btn btn-success w-100">Back</a>
    </div>*/

    <div class="m-3">
        @Html.ActionLink("Back to List", "Index", "Book")
    </div>


}