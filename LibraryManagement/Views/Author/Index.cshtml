@model IEnumerable<LibraryManagement.Entities.Author>


@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "AUTHORS";

}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Author List</h2>
        </div>
        <div class="col-6 text-right">
            <a href="/Author/Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Create New Author
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.Label("FirstName","First Name")
                </th>
                <th>
                    @Html.Label("LastName","Last Name")
                </th>
                <th>
                    @Html.Label("BookId","Book Title")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="20%">@obj.FirstName</td>
                <td width="20%">@obj.LastName</td>
                <td width="20%">@obj.Books.Title</td>
                <td width="20%">
                    <a href="/Author/Edit?Id=@obj.Id" class="btn btn-sm btn-info"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                    <a href="/Author/Delete?Id=@obj.Id" class="btn btn-sm btn-danger"><i class="fa-solid fa-user-xmark"></i> Delete</a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>