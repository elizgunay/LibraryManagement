
@model IEnumerable<LibraryManagement.Entities.Category>

@{

    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Category";


}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a href="/Category/Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Add New Category
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
               
                <th>
                    @Html.DisplayNameFor(m => m.CategoryName)

                </th>
             
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">@obj.CategoryName</td>
     
                    <td width="5%">
                        <a href="/Category/Edit?Id=@obj.Id" class="btn btn-sm btn-info"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                        <a href="/Category/Delete?Id=@obj.Id" class="btn btn-sm btn-danger"><i class="fa-solid fa-user-xmark"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
