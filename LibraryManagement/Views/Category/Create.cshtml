@model LibraryManagement.ViewModels.Categories.CreateVM

@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Create Category";

}

@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{

    <div class="form-horizontal">
        <br />
        <h4 class="ml-4">Add Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3 font-weight-bold m-3">
            @Html.Label("CategoryName", "Category Name", new { @class = "control-label col-md-2" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", placeholder = "Category Name" })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-lg-10 m-4">
                <input type="submit" value="Create" class="btn btn-outline-primary btn-lg" />
            </div>
        </div>
    </div>

    <div class="m-3">
        @Html.ActionLink("Back to List", "Index", "Category")
    </div>
}